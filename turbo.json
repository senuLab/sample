{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "vercel-gha-build": {
      "dependsOn": ["^vercel-gha-build"],
      "cache": true,
      "persistent": false,
      "outputs": [".next/**", ".vercel/**", ".vercel/output/**"]
    }
  }
}
